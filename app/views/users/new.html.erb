
<!--ログイン画面を作成-->

<div class="user-index-wrapper">
    <img src="aaa" class="image" alt="お茶漬けにお湯を入れている途中の画像">
    <div class="container">
        <div class="row">
            <div class="col-md-5 offset-md-8 text-center login">
                <div class="col-md-7 offset-md-2 offset-sm-2">
                    <h3 class="text-center mt-4 mb-4 title">新規登録</h3>
                </div>
                <%= form_for @user do |f| %> 
                    <div class="col-md-11">
                        <%= f.text_field :name, class:"col-md-11 offset-md-1 mb-5 d-block",placeholder:"Name" %>
                        <%= f.text_field :email, class:"col-md-11 offset-md-1 mb-5 d-block",placeholder:"Email" %>
                        <%= f.text_field :password, class:"col-md-11 offset-md-1 mb-5 d-block",placeholder:"Password" %>
                        <%= f.text_field :password_digest, class:"col-md-11 offset-md-1 mb-5 d-block",placeholder:"Confirmation Password" %>
                        <p class="col-md-7 pl-0 mb-1">自分の画像を選択:</p>
                        <%= f.file_field :user_image,  class:"offset-md-1 pl-0 mb-4",value:"画像を選択" %>
                        <%= f.submit "登録", class:"col-md-3 offset-md-1 mt-3 mb-4 btn btn-success" %> 
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>