<%# @comments.each do |comment| %>
  <% if comment.content!= nil %>
    <ul class="list-group-item comment-content">
      <li id="comment" class="list-group-item">
        <% if comment.user&.name!=nil %>
          <%= comment.user.name %>
        <% else %>
          <%= "削除されたユーザー" %>
        <% end %>
        <%= comment.content %>
        <% if comment.user_id==current_user.id %>
          <%= link_to "削除", {controller: "comments", action: "destroy",id: comment.id, recipe_id: comment.recipe_id},{method: :delete, remote: true, data: {confirm: "コメントを削除しますか？"}} %>
        <% end %>
      </li>  
    </ul>
  <% end %>
<%# end %>

